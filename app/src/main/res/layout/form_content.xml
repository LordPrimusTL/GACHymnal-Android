<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fillViewport="true">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:id="@+id/linearLayout">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:layout_weight="1.25"
                android:paddingTop="20px"
                android:paddingBottom="80px"
                android:src="@drawable/download" />

           <LinearLayout
               android:id="@+id/form_linearlayout"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:paddingBottom="-50dp">
               <LinearLayout

                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical">

                   <TextView
                       android:id="@+id/bottom_separator"
                       android:layout_width="fill_parent"
                       android:layout_height="1px"
                       android:background="@color/colorPrimary"
                       android:paddingBottom="120dp"/>

                   <android.support.design.widget.TextInputLayout
                       android:layout_width="match_parent"
                       android:id="@+id/visible"
                       android:paddingTop="120px"
                       android:paddingLeft="15dp"
                       android:paddingRight="15dp"
                       android:layout_height="wrap_content"
                       tools:layout_editor_absoluteY="0dp"
                       tools:layout_editor_absoluteX="8dp">

                       <EditText
                           android:id="@+id/full_name"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:hint="Full Name"
                           android:inputType="textPersonName"/>

                   </android.support.design.widget.TextInputLayout>

                   <android.support.design.widget.TextInputLayout
                       android:layout_width="match_parent"
                       android:paddingTop="120px"
                       android:paddingLeft="15dp"
                       android:paddingRight="15dp"
                       android:layout_height="wrap_content"
                       tools:layout_editor_absoluteY="0dp"
                       tools:layout_editor_absoluteX="8dp"
                       android:visibility="gone">
                       <EditText
                           android:id="@+id/masked"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:hint="Full Name"
                           android:inputType="textPersonName"
                           android:visibility="gone"/>

                   </android.support.design.widget.TextInputLayout>

                   <android.support.design.widget.TextInputLayout
                       android:layout_width="match_parent"
                       android:paddingLeft="15dp"
                       android:paddingRight="15dp"
                       android:layout_height="wrap_content">

                       <EditText
                           android:id="@+id/branch"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:hint="Branch"
                           android:imeOptions="actionUnspecified"
                           android:inputType="text|textNoSuggestions"
                           android:maxLines="1"
                           />
                   </android.support.design.widget.TextInputLayout>
               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:paddingLeft="15dp"
                   android:paddingRight="15dp"
                   android:paddingTop="15dp">
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Default Language: "
                       android:paddingTop="15px"
                       android:textColor="@android:color/black"/>

                   <RadioGroup
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_below="@+id/linearLayout"
                       android:orientation="horizontal">

                       <RadioButton
                           android:id="@+id/YorLang"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Yoruba"/>

                       <RadioButton
                           android:id="@+id/EngLang"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="English"
                           android:checked="true"/>
                   </RadioGroup>
               </LinearLayout>
           </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/bottom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/appIntroBottomBarHeight"
            android:layout_alignParentBottom="true"
            android:background="@android:color/transparent"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            android:orientation="vertical">

            <TextView
                android:id="@+id/bottom_separator2"
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#55000000" />

        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="invisible"
            android:layout_below="@+id/linearLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="38dp" />

        <TextView
            android:id="@+id/loadTextview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please Wait while we pull data from our server.."
            android:visibility="invisible"
            android:layout_marginTop="64dp"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:layout_below="@+id/progressBar"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp" />

        <ProgressBar
            android:id="@+id/progressBar3"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:visibility="invisible"
            android:layout_below="@+id/loadTextview"
            android:layout_marginTop="41dp"
            android:layout_alignParentStart="true" />

        <FrameLayout
            android:id="@+id/bottomContainer"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/progressBar"
            android:layout_marginTop="27dp">

            <FrameLayout
                android:id="@+id/indicator_container"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layoutDirection="ltr" />

            <Button
                android:id="@+id/form_skip"
                style="@style/AppIntroButtonStyleCompat"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="start"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:minWidth="100dp"
                android:text="@string/app_intro_skip_button"
                android:textColor="@android:color/primary_text_light" />


            <Button
                android:id="@+id/form_submit"
                style="@style/AppIntroButtonStyleCompat"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="end"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:minWidth="100dp"
                android:text="@string/app_intro_submit_button"
                android:textColor="@android:color/primary_text_light" />
        </FrameLayout>

    </RelativeLayout>
</ScrollView>